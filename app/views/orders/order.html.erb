<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3>Available Gigs</h3>
      </div>
      <div class="panel-body">
        <% @services.each do |service| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to service_path(service) do %>
                <%= image_tag service.image.url(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-3">
              <h4><%= service.title %></h4>
            </div>
            <div class="col-md-2">
              <h5>Price: $<%= service.price %></h5>
            </div>
            <%= button_to "Order", service_path(service), :class => "btn btn-default", :method => :get %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
